<div class="container">
    <% if (product) { %>
        <div class="row">
            <div class="col-md-6">
                <img src="<%= product.image ? '/uploads/' + product.image : '/images/default-product.jpg' %>" 
                     class="img-fluid rounded" 
                     alt="<%= product.name %>">
            </div>
            <div class="col-md-6">
                <h2><%= product.name %></h2>
                <p class="lead"><%= product.description %></p>
                <h4>Price: Rp <%= product.price.toLocaleString() %></h4>
                <p>Stock: <%= product.stock %> units</p>
                <a href="https://wa.me/your-number?text=Saya tertarik dengan produk <%= product.name %> (Rp <%= product.price.toLocaleString() %>)" 
                   class="btn btn-success btn-lg" 
                   target="_blank">
                    <i class="bi bi-whatsapp"></i> Order via WhatsApp
                </a>
            </div>
        </div>
    <% } else { %>
        <div class="alert alert-warning">
            Product not found.
        </div>
    <% } %>
</div>